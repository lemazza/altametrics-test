generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String
  name    String
  invoices Invoice[]
  bills   Bill[]
}

model Invoice {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  amount  Int
  due_date DateTime
  details String
  user    User @relation(fields: [user_id], references: [id])
  user_id  String @db.ObjectId
}

model Bill {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  amount  Int
  due_date DateTime
  details String
  user    User @relation(fields: [user_id], references: [id])
  user_id  String @db.ObjectId
}
